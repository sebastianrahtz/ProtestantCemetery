            <ab>ELSE PERDELWITZ</ab>
            <ab>GEB. 25 AUGUST 1895, GEST. 13 JULI 1896</ab>
            <ab/>
            <ab rend="Alignl">HIER UNTER TIEFEM SCHATTEN</ab>
            <ab rend="Alignl">SCHLAEFST DU IN GUTER RUH</ab>
            <ab rend="Alignl">ES DECKT MIT GRUENEN MATTEN</ab>
            <ab rend="Alignl">DER LIEBE GOTT DICH ZU</ab>
            <ab/>
            <ab rend="Alignl">UND WIE IN GOLDENEN TRAEUMEN</ab>
            <ab rend="Alignl">GEHT LINDER FRUEHLINGSWIND</ab>
            <ab rend="Alignl">RINGS IN DEN STILLEN BAEUMEN</ab>
            <ab rend="Alignl">SCHLAF WOHL MEIN SUESSES KIND</ab>
            <ab/>
            <ab rend="Alignr">MEINER UNVERGESSLICHEN ELSE</ab>
            <ab rend="Alignr">VON IHRER MUTTER</ab>
         </div>
