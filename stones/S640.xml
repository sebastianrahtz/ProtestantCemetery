         <div type="inscription" xml:lang="fr" decls="#f_S #c_3 #m_IF #t_P">
            <ab>A LA MEMOIRE DE</ab>
            <ab>MARIE CAROLINE MELEGARI</ab>
            <ab>MORTE A ROME LE 21 JUILLET 1892</ab>
            <ab>DANS SA 73ME ANNÉE</ab>
         </div>
         <div type="inscription" xml:lang="fr" decls="#f_T #c_2 #m_IF #t_PC">
            <ab>SES ENFANTS INCONSOLABLES</ab>
         </div>
         <div type="inscription" xml:lang="fr" decls="#f_T #c_3 #m_IF #t_PC">
            <ab>LUIGI BETTS</ab>
            <ab>3 FEBBRAIO 1894 - 7 FEBBRAIO 1969</ab>
            <ab rend="Alignr">"NON CI SARÀ PIÙ NOTTE"</ab>
            <ab rend="Alignr">AP.22,5.</ab>
         </div>
         <div type="inscription" xml:lang="fr" decls="#f_S #c_3 #m_IF #t_SC">
            <ab>HEUREUX LEUX QUI ONT LE COEUR PUR</ab>
            <ab rend="Alignl">CAR ILS VERRONT DIEU</ab>
            <ab rend="Alignr">MATH.V.8.</ab>
         </div>
         <div type="inscription" xml:lang="it" decls="#f_S #c_1 #m_IC #t_S">
            <ab>A</ab>
            <ab>BEATRICE BETTS MELEGARI</ab>
            <ab>7 AGOSTO 1862 - 28 NOVEMBRE 1918</ab>
            <ab>IL MARITO E I FIGLI CON DESOLATO IMPERITURO AFFETTO</ab>
         </div>
         <div type="inscription" xml:lang="it" decls="#f_S #c_1 #m_IC #t_SC">
            <ab rend="Alignr">POICHE`TU SEI LA MIA SPERANZA, O SIGNORE,</ab>
            <ab rend="Alignr">LA MIA FIDUCIA FIN DALLA MIA FANCIULLEZZA</ab>
            <ab rend="Alignr">SALMO LXXI,5</ab>
            <ab>HO COMBATTUTO IL BUON COMBATTIMENTO</ab>
            <ab>HO COMPIUTO LA CORSA, HO SERBATO LA FEDE</ab>
            <ab rend="Alignr"> S.PAOLO,II TIM</ab>
            <ab>....EGLI TI AFFIDERÀ AI SUOI ANGELI</ab>
            <ab>PERCHÈ TI GUARDINO IN TUTTE LE TUE VIE</ab>
            <ab rend="Alignr">SALMO XCI,11</ab>
         </div>
         <div type="inscription" xml:lang="it" decls="#f_S #c_1 #m_IC #t_S">
            <ab>EMMA BETTS</ab>
            <ab>3 DICEMBRE 1890 - 31 GENNAIO 1980</ab>
            <ab rend="Alignr">MA IO NON SONO SOLO</ab>
            <ab rend="Alignr">PERCHÈ IL PADRE È CON ME.</ab>
            <ab rend="Alignr">GIOVANNI 16 VERS.32</ab>
         </div>
