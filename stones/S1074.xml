         <div type="inscription" xml:lang="en" decls="#f_I #c_3 #m_IC #t_S">
            <ab>TO OLIVIA ANDERSON</ab>
            <ab>OUR DREAM OF</ab>
            <ab>A CITY FOR</ab>
            <ab>ALL NATIONS</ab>
            <ab>DEDICATED TO</ab>
            <ab>THE CREATIVE</ab>
            <ab>SPIRIT OF GOD.</ab>
            <ab>IN MAN WAS</ab>
            <ab>OUR HOPE AND</ab>
            <ab>PRAYER IN LIFE</ab>
            <ab>HERE THE</ab>
            <ab>DREAMERS</ab>
            <ab>SLEEP</ab>
            <ab>THE GUARDIAN</ab>
            <ab>ANGEL</ab>
            <ab>UPLIFTING</ab>
            <ab>THE SPIRIT</ab>
            <ab>OF HUMANITY LIKE</ab>
            <ab>A FLAME</ab>
            <ab>TO THE</ab>
            <ab>SILENT</ab>
            <ab>ETERNAL</ab>
            <ab>LIFE</ab>
            <ab>FROM</ab>
            <ab>WHENCE IT</ab>
            <ab>CAME</ab>
         </div>
         <div type="inscription" xml:lang="en" decls="#f_I #c_4 #m_I #t_PC">
            <ab rend="Alignl">OUR</ab>
